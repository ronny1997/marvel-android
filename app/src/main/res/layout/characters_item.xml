<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="characterItemView"
            type="com.ronny.marvel.presentation.model.CharacterItemView" />
        <variable
            name="listener"
            type="com.ronny.marvel.presentation.characterslist.CharacterAdapter.CharacterAdapterListener" />
    </data>

    <FrameLayout
        android:layout_width="125dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="@dimen/grid_0_5"
        android:layout_marginVertical="@dimen/grid_0_25">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view"
            android:layout_width="125dp"
            android:layout_height="200dp"
            app:cardPreventCornerOverlap="false"
            android:onClick="@{(view) -> listener.clickListener(view,characterItemView)}"
            android:transitionName="@{@string/character_transition_name(characterItemView.id)}">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imv_characters"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:contentDescription="@string/character_marvel"
                    app:coilUrl='@{characterItemView.thumbnail}'
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/MarvelCharacterTitleItem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/red_transparent_50"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text='@{characterItemView.name}'
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

</layout>
